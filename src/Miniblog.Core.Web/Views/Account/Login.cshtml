@model LoginViewModel
@inject ITranslationProvider i18n
@{
    ViewData["Title"] = i18n.Translate("Login.Title");
    ViewData["Description"] = i18n.Translate("Login.Description");
}

@section head {
    <link rel="stylesheet" href="~/css/login.scss" />
}

<form method="post" id="login" aria-labelledby="legend" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    <div asp-validation-summary="All"></div>
    <fieldset>
        <legend id="legend">@i18n.Translate("Login.Legend")</legend>

        <input asp-for="UserName" aria-label="@i18n.Translate("Login.Username")" autofocus required placeholder="@i18n.Translate("Login.Username")" />
        <input asp-for="Password" aria-label="@i18n.Translate("Login.Password")" required placeholder="@i18n.Translate("Login.Password")" />

        <input asp-for="RememberMe" />
        <label asp-for="RememberMe">@i18n.Translate("Login.RememberMe")</label>

        <input type="submit" value="@i18n.Translate("Login.SignIn")" />
    </fieldset>
</form>