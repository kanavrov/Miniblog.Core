@model IEnumerable<Post>
@inject IOptionsSnapshot<BlogSettings> settings
@inject ITranslationProvider i18n

@{
    int currentPage = int.Parse(ViewContext.RouteData.Values["page"] as string ?? "0");
}

@foreach (var post in Model)
{
    await Html.RenderPartialAsync("Post.cshtml", post);
}

<nav class="pagination container" aria-label="Pagination">
    @if (Model.Any())
    {
        <a rel="prev" href="@ViewData["prev"]" title="@i18n.Translate("Index.OlderPostsTitle")">&laquo; @i18n.Translate("Index.OlderPosts")</a>
    }
    @if (currentPage > 0)
    {
        <a rel="next" href="@ViewData["next"]" title="@i18n.Translate("Index.NewerPostsTitle")">@i18n.Translate("Index.NewerPosts") &raquo;</a>
    }
    <br /><br />

    @section Head {
        @if (Model.Any())
        {
            <link rel="prev" href="@ViewData["prev"]" />
        }
        @if (currentPage > 0)
        {
            <link rel="next" href="@ViewData["next"]" />
        }
    }
</nav>

@{await Html.RenderPartialAsync("_SocialSharing", ViewData["Title"]);}
